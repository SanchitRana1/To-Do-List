<%- include("header") -%>
    <div class="box" id="heading">
        <h1> <%=listTitle%> </h1>
    </div>

    <div class="box">


         <%  newListItem.forEach(item=>{ %>
            <form action="/delete" method="post" >   
            <div class="item">
                <input type="checkbox" name="checkbox" value="<%= item._id %>|<%= listTitle %>" onchange="this.form.submit()">
                <p> <%= item.name %> </p>
            </div>
            </form>
         <%})%>
        
               
   
        <form action="/" method="post">
            <input type="text" name="newItem" placeholder="New Task" autocomplete="off">
            <button type="submit" name="button" value="<%= listTitle %>">+</button>
        </form>
    </div>

    <%- include("footer") -%>